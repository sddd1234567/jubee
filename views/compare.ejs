<% layout('layout_main') %>
    <div class="history_main">
        <div class="container-fluid">
            <div class="row">
                <div class="col-12 col-md-9">
                    <div class="row">
                        <div class="col-12 col-lg-9">
                            <nav aria-label="breadcrumb" class="index" role="navigation">
                                <ol class="breadcrumb">
                                    <li class="breadcrumb-item"><a href="#">啾比比價</a></li>
                                    <li class="breadcrumb-item active" aria-current="page"><%= p_name %> 的比價結果</li>
                                </ol>
                            </nav>
                        </div>
                        <div class="col-12 col-lg-3" style="text-align: right;">
                            <nav class="index" role="navigation">
                                <ol class="breadcrumb sortby" style="float: right;">
                                    <button type="button" class="btn btn-warning btn-sm">價格由高到低</button>
                                    <button type="button" class="btn btn-warning btn-sm">價格由低到高</button></ol>
                            </nav>
                        </div>
                    </div>
                    <div id="compare-title">
                        <h3><%= p_name %></h3>
                    </div>
                    <div class="table-list">
                        <table class="table" id="search_result">
                            <tbody>                                
                                <% for(p in productList){ %>
                                <tr>
                                    <td style="width:33%;">
                                        <a href="javascript:clickLink({title: '<%=productList[p].title%>', price: <%=productList[p].price%>, website: '<%=productList[p].website%>', url: '<%=productList[p].url%>',image: '<%=productList[p].image%>'})">
                                            <center><img class="d-block" src="<%= productList[p].image %>" style="margin-left:unset!important;"></center>
                                        </a>
                                    </td>

                                    <td>
                                        <p><a href="javascript:clickLink({title: '<%=productList[p].title%>', price: <%=productList[p].price%>, website: '<%=productList[p].website%>', url: '<%=productList[p].url%>',image: '<%=productList[p].image%>'})"><%= productList[p].title %></a></p>
                                        <p><%= productList[p].website %></p>
                                        <p class="price">$<%= productList[p].price %></p>
                                        <div class="result_buttons">
                                            <a href = "javascript:clickLink({title: '<%=productList[p].title%>', price: <%=productList[p].price%>, website: '<%=productList[p].website%>', url: '<%=productList[p].url%>',image: '<%=productList[p].image%>'})"><button type="button" class="btn btn-info">前往購買</button></a>
                                            <% if(!productList[p].isCollected){ %>
                                                <a id = "collect_<%=p%>" href = "javascript:addToCollect({title: '<%=productList[p].title%>', price: <%=productList[p].price%>, website: '<%=productList[p].website%>', url: '<%=productList[p].url%>',image: '<%=productList[p].image%>'},<%=p%>)"><button type="button" class="btn btn-warning">收藏</button></a>
                                            <% } %>
                                            <% if(productList[p].isCollected){ %>
                                                已加入收藏
                                            <% } %>
                                        </div>
                                    </td>
                                </tr>
                                <% } %>                                
                            </tbody>
                        </table>
                    </div>
                </div>
                <div class="col-12 col-md-3">
                    <div class="card border-light mb-3 mx-auto" style="max-width: 20rem;" id="hot_product">
                        <div class="card-header">熱門商品</div>
                        <div class="card-body">
                            <div class="hot_item">
                                <div class="row">
                                    <div class="col-12 col-lg-4">
                                        <center><img class="d-block" src="<%=hotProducts[0].image%>" style="margin-left:unset!important;"></center>
                                    </div>
                                    <div class="col-12 col-lg-8">
                                        <p>
                                            <a href="#">
                                                <%=hotProducts[0].title%>
                                            </a>
                                        </p>
                                        <p class="price">
                                            <%=hotProducts[0].price%>
                                        </p>
                                        <div class="buy_now text-right">
                                            <a href="<%=hotProducts[0].url%>"><button type="button" class="btn btn-danger">搶購</button></a>
                                        </div>
                                    </div>
                                </div>
                                <hr>
                            </div>
                            <div class="hot_item">
                                <div class="row">
                                    <div class="col-12 col-lg-4">
                                        <center><img class="d-block" src="<%=hotProducts[1].image%>" style="margin-left:unset!important;"></center>
                                    </div>
                                    <div class="col-12 col-lg-8">
                                        <p>
                                            <a href="#">
                                                <%=hotProducts[1].title%>
                                            </a>
                                        </p>
                                        <p class="price">
                                            <%=hotProducts[1].price%>
                                        </p>
                                        <div class="buy_now text-right">
                                            <a href="<%=hotProducts[1].url%>"><button type="button" class="btn btn-danger">搶購</button></a>
                                        </div>
                                    </div>
                                </div>
                                <hr>
                            </div>
                            <div class="hot_item">
                                <div class="row">
                                    <div class="col-12 col-lg-4">
                                        <center><img class="d-block" src="<%=hotProducts[2].image%>" style="margin-left:unset!important;"></center>
                                    </div>
                                    <div class="col-12 col-lg-8">
                                        <p>
                                            <a href="#">
                                                <%=hotProducts[2].title%>
                                            </a>
                                        </p>
                                        <p class="price">
                                            <%=hotProducts[2].price%>
                                        </p>
                                        <div class="buy_now text-right">
                                            <a href="<%=hotProducts[2].url%>"><button type="button" class="btn btn-danger">搶購</button></a>
                                        </div>
                                    </div>
                                </div>
                                <hr>
                            </div>


                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>