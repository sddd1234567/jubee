<% layout('layout_main') %>
<div class="main">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12 col-md-9">
                <div class="row">
                    <div class="col-12 col-lg-9">
                        <nav aria-label="breadcrumb" class="index" role="navigation">
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item"><a href="#">啾比比價</a></li>
                                <li class="breadcrumb-item active" aria-current="page"><%= keyword %> 的搜尋結果</li>
                            </ol>
                        </nav>
                    </div>
                    <div class="col-12 col-lg-3" style="text-align: right;">
                        <nav class="index" role="navigation">
                            <ol class="breadcrumb sortby" style="float: right;">
                                <button type="button" class="btn btn-warning btn-sm">價格由高到低</button>
                                <button type="button" class="btn btn-warning btn-sm">價格由低到高</button></ol>
                        </nav>
                    </div>
                </div>
                <div class="table-list">
                    <table class="table" id="search_result">
                        <tbody>
                            <% for(p in productList){ %>
                            <tr>
                                <td style = "width:33%;">
                                    <a href="compare?p_id=<%=productList[p].p_id%>&keyword=<%=productList[p].keyword%>">
                                        <center><img class="d-block" src='<%= productList[p].image %>' style="margin-left:unset!important;"></center>
                                    </a>
                                </td>
                                    <td>
                                        <p><a href="compare?p_id=<%=productList[p].p_id%>&keyword=<%=productList[p].keyword%>"><%= productList[p].title %></a></p>
                                        <p>共<%= productList[p].count%>筆商品</p>
                                        <p class="price">$<%= productList[p].minPrice %>~$<%= productList[p].maxPrice %></p>
                                        <div class="result_buttons">
                                            <a href="compare?p_id=<%=productList[p].p_id%>&keyword=<%=productList[p].keyword%>"><button type="button" class="btn btn-info">比較價格</button></a>
                                        </div>
                                    </td>

                            </tr>
                            <%}%>

                        </tbody>
                    </table>
                    <nav aria-label="Page navigation example">
                        <ul class="pagination justify-content-center">
                            <li class="page-item disabled">
                                <a class="page-link" href="#" tabindex="-1">前一頁</a>
                            </li>
                            <li class="page-item"><a class="page-link" href="#">1</a></li>
                            <li class="page-item"><a class="page-link" href="#">2</a></li>
                            <li class="page-item"><a class="page-link" href="#">3</a></li>
                            <li class="page-item">
                                <a class="page-link" href="#">下一頁</a>
                            </li>
                        </ul>
                    </nav>
                </div>
            </div>
            <div class="col-12 col-md-3">
                <div class="card border-light mb-3 mx-auto" style="max-width: 20rem;">
                    <div class="card-header">進階搜尋</div>
                    <div class="card-body">
                        <form>
                            <div class="form-group">
                                <label for="price_range">輸入價格範圍</label>
                                <div class="form-row">
                                    <input type="number" class="form-control col" id="lowest_price" placeholder="最低價格">
                                    <label id = "price_devide">~</label>
                                    <input type="number" class="form-control col" id="highest_price" placeholder="最高價格">
                                </div>
                                
                            </div>
                            <div class="form-group">
                                <label for="ex_keyword">排除關鍵字</label>
                                <input type="password" class="form-control" id="exampleInputPassword1" placeholder="排除關鍵字">
                            </div>
                            <div class="form-check text-left">
                                <p><label for="target_website">選擇網站</label></p>
                                <label class="form-check-label">
                                    <input type="checkbox" class="form-check-input">PChome24hr<br>
                                    <input type="checkbox" class="form-check-input">momo購物網<br>
                                    <input type="checkbox" class="form-check-input">蝦皮商城<br>
                                    <input type="checkbox" class="form-check-input">台灣樂天<br>
                                    <input type="checkbox" class="form-check-input">Yahoo超級商城<br>
                                    <input type="checkbox" class="form-check-input">Udn買東西<br>
                                </label>
                            </div>
                            <button type="submit" class="btn btn-info">篩選</button>
                        </form>
                    </div>
                <div class="card border-light mb-3 mx-auto" style="max-width: 20rem;" id = "hot_product">
                    <div class="card-header">熱門商品</div>
                    <div class="card-body">
                        <div class="hot_item">
                            <div class="row">
                                <div class="col-12 col-lg-4">
                                    <center><img class="d-block" src="<%=hotProducts[0].image%>" style="margin-left:unset!important;"></center>
                                </div>
                                <div class="col-12 col-lg-8">
                                    <p><a href="#"><%=hotProducts[0].title%></a></p>
                                    <p class="price"><%=hotProducts[0].price%></p>
                                    <div class="buy_now text-right">
                                        <a href = "<%=hotProducts[0].url%>"><button type="button" class="btn btn-danger">搶購</button></a>
                                    </div>
                                </div>
                            </div>
                            <hr>
                        </div>
                        <div class="hot_item">
                            <div class="row">
                                <div class="col-12 col-lg-4">
                                    <center><img class="d-block" src="<%=hotProducts[1].image%>" style="margin-left:unset!important;"></center>
                                </div>
                                <div class="col-12 col-lg-8">
                                    <p>
                                        <a href="#">
                                            <%=hotProducts[1].title%>
                                        </a>
                                    </p>
                                    <p class="price">
                                        <%=hotProducts[1].price%>
                                    </p>
                                    <div class="buy_now text-right">
                                        <a href="<%=hotProducts[1].url%>"><button type="button" class="btn btn-danger">搶購</button></a>
                                    </div>
                                </div>
                            </div>
                            <hr>
                        </div>
                        <div class="hot_item">
                            <div class="row">
                                <div class="col-12 col-lg-4">
                                    <center><img class="d-block" src="<%=hotProducts[2].image%>" style="margin-left:unset!important;"></center>
                                </div>
                                <div class="col-12 col-lg-8">
                                    <p>
                                        <a href="#">
                                            <%=hotProducts[2].title%>
                                        </a>
                                    </p>
                                    <p class="price">
                                        <%=hotProducts[2].price%>
                                    </p>
                                    <div class="buy_now text-right">
                                        <a href="<%=hotProducts[2].url%>"><button type="button" class="btn btn-danger">搶購</button></a>
                                    </div>
                                </div>
                            </div>
                            <hr>
                        </div>
                            
                                
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>