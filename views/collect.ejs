<% layout('layout_main') %>
<div class="main">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12 col-md-9">
                <div class="row">
                    <div class="col-12 col-lg-9">
                        <nav aria-label="breadcrumb" class="index" role="navigation">
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item"><a href="#">啾比比價</a></li>
                                <li class="breadcrumb-item active" aria-current="page">我的收藏</li>
                            </ol>
                        </nav>
                    </div>
                    <div class="col-12 col-lg-3">
                        <nav aria-label="breadcrumb" class="index" role="navigation">
                            <ol class="breadcrumb" style = "float:right;">
                                <span>共8筆收藏，這是第1頁</span>
                            </ol>
                        </nav>
                    </div>
                </div>
            
                <div class="table-list">
                    <table class="table" id="search_result">
                        <tbody>
                            <% for(index in collections){ %>
                            <tr>
                                <td style = "width:33%;">
                                    <a href="javascript:clickLink({title: '<%=collections[index].title%>', price: <%=collections[index].price%>, website: '<%=collections[index].website%>', url: '<%=collections[index].url%>',image: '<%=collections[index].image%>'})">
                                        <center><img class="d-block" src="<%=collections[index].image%>" style="margin-left:unset!important;"></center>
                                    </a>
                                </td>
                                <td>
                                    <p><a href="javascript:clickLink({title: '<%=collections[index].title%>', price: <%=collections[index].price%>, website: '<%=collections[index].website%>', url: '<%=collections[index].url%>',image: '<%=collections[index].image%>'})"><%=collections[index].title%></a></p>
                                    <p class="price">$<%=collections[index].price%></p>
                                    <div class="result_buttons row">
                                        <i class="material-icons col-12 col-md-auto"><a href="#"  data-toggle="modal" data-target="#alartme">add_alert</a></i>
                                        <div class="col-12 col-md-auto">
                                            <a href = "javascript:clickLink({title: '<%=collections[index].title%>', price: <%=collections[index].price%>, website: '<%=collections[index].website%>', url: '<%=collections[index].url%>',image: '<%=collections[index].image%>'})"><button type="button" class="btn btn-info">馬上搶購</button></a>
                                            <a id = "<%=index%>" href = "javascript:removeFromCollections('<%=index%>')"><button type="button" class="btn btn-warning">取消收藏</button></a>
                                        </div>
                                    </div>
                                </td>
                            </tr>
                            <% } %>
                            
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="col-12 col-md-3">
                <div class="card border-light mb-3 mx-auto" style="max-width: 20rem;" id = "hot_product">
                    <div class="card-header">熱門商品</div>
                    <div class="card-body">
                        <div class="hot_item">
                            <div class="row">
                                <div class="col-12 col-lg-4">
                                    <center><img class="d-block" src="<%=hotProducts[0].image%>" style="margin-left:unset!important;"></center>
                                </div>
                                <div class="col-12 col-lg-8">
                                    <p>
                                        <a href="#">
                                            <%=hotProducts[0].title%>
                                        </a>
                                    </p>
                                    <p class="price">
                                        <%=hotProducts[0].price%>
                                    </p>
                                    <div class="buy_now text-right">
                                        <a href="<%=hotProducts[0].url%>"><button type="button" class="btn btn-danger">搶購</button></a>
                                    </div>
                                </div>
                            </div>
                            <hr>
                        </div>
                        <div class="hot_item">
                            <div class="row">
                                <div class="col-12 col-lg-4">
                                    <center><img class="d-block" src="<%=hotProducts[1].image%>" style="margin-left:unset!important;"></center>
                                </div>
                                <div class="col-12 col-lg-8">
                                    <p>
                                        <a href="#">
                                            <%=hotProducts[1].title%>
                                        </a>
                                    </p>
                                    <p class="price">
                                        <%=hotProducts[1].price%>
                                    </p>
                                    <div class="buy_now text-right">
                                        <a href="<%=hotProducts[1].url%>"><button type="button" class="btn btn-danger">搶購</button></a>
                                    </div>
                                </div>
                            </div>
                            <hr>
                        </div>
                        <div class="hot_item">
                            <div class="row">
                                <div class="col-12 col-lg-4">
                                    <center><img class="d-block" src="<%=hotProducts[2].image%>" style="margin-left:unset!important;"></center>
                                </div>
                                <div class="col-12 col-lg-8">
                                    <p>
                                        <a href="#">
                                            <%=hotProducts[2].title%>
                                        </a>
                                    </p>
                                    <p class="price">
                                        <%=hotProducts[2].price%>
                                    </p>
                                    <div class="buy_now text-right">
                                        <a href="<%=hotProducts[2].url%>"><button type="button" class="btn btn-danger">搶購</button></a>
                                    </div>
                                </div>
                            </div>
                            <hr>
                        </div>
                            
                                
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="alartme" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">新增提醒</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
            </div>
            <div class="modal-body">
                <label for="price" class = "label-lg">PS4 VR《上古卷軸5:無界天際》中英文版</label>
                <input class="form-control" id = "price" type="number" placeholder="輸入價格">
                <small id="Help" class="form-text text-muted">我們會在低於這個價格時寄送email通知您。</small>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">取消</button>
                <button type="button" class="btn btn-primary">儲存</button>
            </div>
        </div>
    </div>
</div>